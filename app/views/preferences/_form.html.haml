- preference ||= Preference.new

= simple_form_for [@account, preference] do |f|
  .modal-body.moday-body-pref 

    = f.input :preference_type, collection: Fooda::AccountPreferences::Type.available_values.collect{|c| [c.titleize, c]}, include_blank: "Select a Preference Type"

    .js-event-toggle-preference-type

      .js-event-toggle-preference-type-vendor
        = f.association :vendor
      .js-event-toggle-preference-type-cuisine
        = f.input :cuisine, collection: StaticData::Cuisines

      = f.input :disposition, collection: Fooda::AccountPreferences::Disposition.available_values.collect{|c| [c.titleize, c]}

  .modal-footer
    = f.submit(:class => "btn btn-primary")
