!!!
%html
  %head
    %title Fooda Catering Invoice Summary
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    :css      
      @page { 
        margin: 40px 45px 160px 45px; background: #ffffff;
        @bottom { padding-top: 3px; font-size: 0.75em; content:  "Page " counter(page) " of " counter(pages) }
        @bottom-left { content:  flow(foot-left) }
        @bottom-right { content:  flow(foot-right) }
      }

      #footer-left { 
        flow: static(foot-left);
        font-size: 0.75em;
        padding-top: 3px;
        padding-bottom: 10px;
      }

      #footer-right { 
        flow: static(foot-right);
        font-size: 0.75em;
        padding-top: 3px;
        padding-bottom: 10px;
      }
      
      h1 { padding: 0; margin: 0; }
      h2 { padding: 0px 0px 0px 0px; margin: 0px 0px 0px 0px; }
      h3 { padding: 20px 0px 10px 0px; margin: 0px 0px 0px 0px; }
      h4 { padding: 0px 0px 0px 0px; margin: 0px 0px 0px 0px; }
      p  { padding: 0px 0px 0px 0px; margin: 0px 0px 0px 0px; }

      table {
        padding-top:20px;
        width: 100%;
      }

      table tr th {
        background: #eee;
      }

      table tr td {
        text-align: left;
        border-bottom: 1px #ccc solid;
      }

      table.table-condensed {
        width: 30%;
        float:right;
        position:relative;
      }

      td.indent {
        text-align: left;
        border-bottom: 1px #ccc solid;
        padding-left: 30px;
      }

      p.indent {
        padding-left: 20px;
      }

      .pull-right {
        float:right;
        position:relative;
      }

      .pull-right-third {
        float:right;
        position:relative;
        width: 35%;
        margin: 0px 0px 80px 80px;
      }

      .pull-right-summary-meta {
        float:right;
        position:relative;
        width: 50%;
      }

      .pull-left {
        float:left;
        position:relative;
      }

      .pull-left-half {
        float:left;
        position:relative;
        width: 100%;
      }

      .center {
        text-align: center;
      }

      #break {
        clear: both;
        border-bottom: 1px #000 solid;
        padding-top: 20px; 
        padding-bottom: 20px;
      }

      #pretty_id {
        font-size: 0.75em;
      }

  %body
    #break
      .pull-right
        %img{:src => "https://s3.amazonaws.com/snappea-marketing/logo.png"}
      %h1 Fooda Catering
      %h2 Invoice Summary
    
    #break
      .pull-right-summary-meta
        %b Invoice Summary No.:
        = @document_name
        %br
        %b Invoice Summary Date:
        = DateTime.now.strftime("%A, %b #{DateTime.now.day.ordinalize}, %Y")
      %b Event Date:
      = @event.pretty_event_datetime
      %br
      %b Delivery:
      = @event.pretty_setup_datetime

    .pull-left
      %h3 Account:
      %b= @event.account.name
      %br 
      #pretty_id
        ID: 
        = @event.account.pretty_id
      %br
      %p.indent
        -unless @event.contact.nil? or @event.contact.name.nil?
          =@event.contact.name 
          %br
        - unless @event.location.nil?
          = @event.location.html_address 
        - else
          %i No Location Selected
        %br
        = @event.contact.phone_number unless @event.contact.nil?
        %br 
        = @event.contact.email unless @event.contact.nil?

    .pull-right
      %h3 
        - if (@event.event_vendors.count > 1)
          Vendors: 
        - else
          Vendor:
      - @event.event_vendors.each do |ev|
        - unless ev.vendor.nil?
          %b= ev.vendor.name
          #pretty_id
            ID: 
            = ev.vendor.pretty_id
          %br
          %p.indent
            = ev.vendor.billing_address
          %br

    %table.table.table-striped
      %thead
        %tr
          %th Item
          %th Type
          %th Quantity
          %th Unit Price
          %th Total
          %th Invoice ID
      %tbody
        - @event.event_vendors.each do |ev|
          - @event.line_items_vendor_per_person_charge_by_billable_party(@party, ev.vendor).each do |li|
            %tr
              %td= li.name
              %td
              %td= (li.quantity == 0)  ? "-" : li.quantity
              %td= (li.include_price_in_revenue) ? number_to_currency(li.unit_price_revenue) : "-"
              %td= (li.include_price_in_revenue) ? number_to_currency(li.unit_price_revenue * li.quantity) : "-"
              %td= li.document.name unless li.document.nil?
          - @event.line_items_vendor_no_price_menu_items_by_billable_party(@party, ev.vendor).each do |li|
            %tr
              %td.indent= li.name
              %td= li.inventory_item.meal_type.titleize unless li.inventory_item.nil? or li.inventory_item.meal_type.nil?
              %td= (li.quantity == 0)  ? "-" : li.quantity
              %td= (li.include_price_in_revenue) ? number_to_currency(li.unit_price_revenue) : "-"
              %td= (li.include_price_in_revenue) ? number_to_currency(li.unit_price_revenue * li.quantity) : "-"
              %td= li.document.name unless li.document.nil?
          - @event.line_items_vendor_menu_items_with_price_by_billable_party(@party, ev.vendor).each do |li|
            %tr
              %td= li.name
              %td= li.inventory_item.meal_type.titleize unless li.inventory_item.nil? or li.inventory_item.meal_type.nil?
              %td= (li.quantity == 0)  ? "-" : li.quantity
              %td= (li.include_price_in_revenue) ? number_to_currency(li.unit_price_revenue) : "-"
              %td= (li.include_price_in_revenue) ? number_to_currency(li.unit_price_revenue * li.quantity) : "-"
              %td= li.document.name unless li.document.nil?
        - @event.line_items_no_associated_vendor_by_billable_party(@party).each do |li|
          %tr
            %td= li.name
            %td
            %td= (li.quantity == 0)  ? "-" : li.quantity
            %td= (li.include_price_in_revenue) ? number_to_currency(li.unit_price_revenue) : "-"
            %td= (li.include_price_in_revenue) ? number_to_currency(li.revenue_total) : "-"
            %td= li.document.name unless li.document.nil?

    - invoices = @event.documents.where(document_type: DocumentType::Event.invoice)
    %table.table-condensed
      %thead
        %tr
          %th Invoice ID
          %th Total
      %tbody
        - invoices.each do |doc|
          %tr
            %td= doc.name
            %td= number_to_currency(doc.total.to_f)
        %tr
          %td
            %b Total
          %td= number_to_currency(invoices.inject(0) { |sum, doc| sum + doc.total.to_f})

    #break

    .pull-left-half
      .pull-right-third
        - unless @event.billing_references.nil? || @event.billing_references.empty?
          %h3 Billing Reference
          %p.indent
            - @event.billing_references.each do |br|
              %b
                = br.name + ": " 
              =br.tag_list.first
      %h3  Payment Method:
      %p.indent
        - unless @event.event_transaction_method.nil?
          - if @event.event_transaction_method.transaction_method == "CC"
            %b Type: 
            Credit Card
            %br
            %b Card Last Name:
            = @event.event_transaction_method.info1
            %br
            %b Card Number: 
            XXXX-XXXX-XXXX-
            =@event.event_transaction_method.info2
          - else
            %b Type: 
            Corporate Account

    #break

    .pull-left
      .pull-right-third
        %h3 Event Details:

        %table.table
          %tbody
            %tr 
              %td Drop Off/Serving:
              %td= @event.service_style.titleize unless @event.service_style.nil?
            %tr
              %td Individually Labeled:
              %td= Document::pretty_bool @event.individual_label
            %tr
              %td Serving Utensils:
              %td= Document::pretty_bool @event.serving_utensils
            %tr
              %td Plates, Utensils & Napkins:
              %td= Document::pretty_bool @event.utensils_plates_napkins
            %tr
              %td Chaffing Frames:
              %td= Document::pretty_bool @event.chaffing_frames
            %tr
              %td Sternos:
              %td= Document::pretty_bool @event.sternos

      %h3 Event Notes
      = simple_format(@event.external_account_notes) unless @event.external_account_notes.nil?

    #footer
      #footer-left
        .pull-left
          %b
            All orders are subject to a 24 hour cancellation policy â€“ 
            %br 
            Orders cancelled within 24 hours are subject to a 50% fee. 
          %br
          Copyright 
          = Date.today.year 
          Fooda Inc. All rights reserved.


      #footer-right
        %p.pull-right
          600 W Chicago Ave Suite 775 Chicago, IL 60654
          %br
          %b Phone: 
          (312) 662 - 6539
          = "&#160;" * 6
          %b Fax:
          (312) 924 - 0651
          %br
          %b Email:
          catering@fooda.com
